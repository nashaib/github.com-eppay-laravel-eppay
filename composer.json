{
    "name": "eppay/laravel-eppay",
    "description": "Laravel package for easy EpPay cryptocurrency payment integration",
    "keywords": ["laravel", "eppay", "payment", "cryptocurrency", "crypto", "web3", "qr-code", "blockchain"],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "EpPay",
            "email": "support@eppay.io"
        }
    ],
    "require": {
        "php": "^8.1|^8.2|^8.3",
        "laravel/framework": "^10.0|^11.0",
        "illuminate/support": "^10.0|^11.0",
        "guzzlehttp/guzzle": "^7.2",
        "bacon/bacon-qr-code": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "orchestra/testbench": "^8.0|^9.0"
    },
    "autoload": {
        "psr-4": {
            "EpPay\\LaravelEpPay\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "EpPay\\LaravelEpPay\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "EpPay\\LaravelEpPay\\EpPayServiceProvider"
            ],
            "aliases": {
                "EpPay": "EpPay\\LaravelEpPay\\Facades\\EpPay"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
